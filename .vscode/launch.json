          "type": "cppdbg",
          "request": "launch",
          "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
          "args": [], // 如果需要，可以在这里添加命令行参数
          "stopAtEntry": false,
          "cwd": "${workspaceFolder}",
          "environment": [],
          "externalConsole": false,
          "MIMode": "gdb",
          "miDebuggerPath": "D:\\mingw64\\bin\\gdb.exe",
          "setupCommands": [
              {
                  "description": "为 gdb 启用整洁打印",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
